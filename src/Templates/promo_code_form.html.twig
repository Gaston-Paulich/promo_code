  <label for="promo_code">Ingrese su código de hasta 14 dígitos:</label>
  <input type="text" id="promo_code" name="promo_code" maxlength="14" required>
  <button type="submit">Validar Código</button>
</form>

<script>
  async function validateCode(event) {
    event.preventDefault();
    const form = document.getElementById('promo-code-form');
    const formData = new FormData(form);
    const response = await fetch(form.action, {
      method: 'POST',
      body: formData,
    });
    const result = await response.text();

    if (response.status === 200) {
      alert('Código válido');
    } else {
      alert('Código inválido');
    }
  }
</script>

