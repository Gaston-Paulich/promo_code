<form action="{{ path('promo_code.import_codes') }}" method="post" enctype="multipart/form-data" id="import-codes-form" onsubmit="return importCodes(event)">
  <label for="csv_file">Seleccione un archivo CSV para cargar los c贸digos:</label>
  <input type="file" id="csv_file" name="csv_file" accept=".csv" required>
  <button type="submit">Cargar C贸digos</button>
</form>

<script>
  async function importCodes(event) {
    event.preventDefault();
    const form = document.getElementById('import-codes-form');
    const formData = new FormData(form);
    const response = await fetch(form.action, {
      method: 'POST',
      body: formData,
    });

    if (response.status === 200) {
      alert('C贸digos cargados exitosamente');
    } else {
      alert('Error al cargar los c贸digos');
    }
  }
</script>
